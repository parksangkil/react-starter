{
    "compilerOptions": {
        "module": "es6",
        "target": "es6",
        "allowSyntheticDefaultImports": false,
        "jsx": "react",
        "noImplicitAny": false,
        "experimentalDecorators": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "rootDir": "./src",
        "outDir": "./app-dev"
    },
    "filesGlob": [
        "typings/**/*.d.ts",
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "android",
        "ios",
        "app-dev",
        "app-prod"
    ]
}