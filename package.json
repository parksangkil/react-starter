{
  "name": "react-web-native-redux-starter",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "npm run clean && mkdir app && cp src/index.html app/index.html && node tools/server.js",
    "build": "webpack",
    "tsc": "tsc -p tsconfig.json",
    "tsc-dev": "npm run tsc --sourceMap",
    "tsc-dev-native": "npm run tsc -- --outDir app/native",
    "tsc-dev-native-watch": "npm run tsc-native-dev -- -w",
    "tsc-dev-web": "npm run tsc -- --outDir app/web",
    "clean": "rimraf app"
  },
  "dependencies": {
    "axios": "^0.13.1",
    "classnames": "^2.2.5",
    "core-js": "^2.4.1",
    "normalize.css": "^4.2.0",
    "react": "15.2.1",
    "react-dom": "^15.2.1",
    "react-native": "0.30.0",
    "react-redux": "^4.4.5",
    "redux": "^3.5.2",
    "redux-persist": "^3.2.2",
    "redux-thunk": "^2.1.0",
    "validator": "^5.5.0"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "chai-as-promised": "^5.3.0",
    "cpr": "^1.1.2",
    "css-loader": "^0.23.1",
    "enzyme": "^2.4.1",
    "mocha": "^2.5.3",
    "react-hot-loader": "^1.3.0",
    "redux-logger": "^2.6.1",
    "rimraf": "^2.5.4",
    "sinon": "^1.17.5",
    "sinon-chai": "^2.8.0",
    "ts-loader": "^0.8.2",
    "tslint": "^3.14.0",
    "typescript": "^1.8.10",
    "webpack": "^1.13.1",
    "webpack-config": "^5.2.1",
    "webpack-dev-server": "^1.14.1"
  }
}
